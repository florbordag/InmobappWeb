@model IEnumerable<Inmobiliaria_.Net_Core.Models.Alquiler>

@{
    ViewData["Title"] = "Index";
}

<h1>Alquileres</h1>

<p>
    <a asp-action="Create">Agregar</a>
</p>
<table class="table" style="margin-bottom:45px;font-size:12px" >
    <thead>
        <tr align="center">
            <th>
                Vigente
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inmueble)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inquilino)
            </th>
            <th>
                Direccion
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MontoTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Multa)
            </th>
            <th>
                Acciones
            </th>
            <th>
                Pagos
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var pregunta2 = item.Multa ?? null;

           
        <tr align="center">
            @if (item.vigente())
            {
                <td>
                    SI
                </td>
            }
            else
            {
                <td>NO</td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Inmueble.Duenio.Nombre)
                @Html.DisplayFor(modelItem => item.Inmueble.Duenio.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inquilino.Nombre)
                @Html.DisplayFor(modelItem => item.Inquilino.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inmueble.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MontoTotal)
            </td>
            @if (pregunta2 == null)
            {
                <td>
                    -
                </td>
            }
            else
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Multa)
                </td>
            }
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdContrato" title="Edit"><span class="lnr lnr-pencil"></span></a>&nbsp;
                <a asp-action="Delete" asp-route-id="@item.IdContrato" title="Delete"><span class="lnr lnr-cross"></span></a>
            </td>
            <td><a asp-controller="Pagos" asp-action="Index" asp-route-id="@item.IdContrato" title="Index"><span class="lnr">IR A PAGOS</span></a></td>
        </tr>
        }
    </tbody>
</table>