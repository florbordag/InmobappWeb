@model Inmobiliaria_.Net_Core.Models.Alquiler

@{
    ViewData["Title"] = "Edit";
    
}


<h2>Fin de contrato de alquiler</h2>

<h6><a asp-action="Index">Cancelar</a></h6>
<hr />
<div class="row" style="margin-bottom:30px">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdContrato" />
            <p¿>Desea finalizar el contrato entre  <b>@ViewBag.trato </b>? . Sele cobrará una multa por rescindir el contrato.</p¿>


            <div class="form-group">
                <label asp-for="FechaFin" class="control-label"></label>
                <input asp-for="FechaFin" type="date" class="form-control" required />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}